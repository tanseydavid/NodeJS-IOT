extends layout

block content
  h3= product.productLine
  h2= title
  p
    h4 #{"Scale: " + product.productScale }
    h4 #{"Vendor: " + product.productVendor}
    p
      span #{product.productDescription + " (" }
      a(href=product.href)
        span.
          #{product.productCode}
      span )

