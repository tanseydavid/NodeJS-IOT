extends layout
include mixins/util

block content
  h2= title
  h4 Classic Models - NodeJS Reference Application
  p v#{ version }
  div.row
    div.column
      h3 Back-End
        h4 NodeJS
          p v14.8.0 &nbsp;
            +link('https://nodejs.org/en/about/releases/', 'more info')(class="btn")
        h4 MySQL
          p v8.0.21 &nbsp;
            +link('https://dev.mysql.com/', 'more info')
            br
            +link('https://www.mysqltutorial.org/mysql-sample-database.aspx/', 'sample database')(class="btn")
        h4 ExpressJS
          p v4.17.1 &nbsp;
            +link('https://expressjs.com/', 'more info')(class="btn")
    div.column
      h3 Front-End
        h4 PUG templates
          p v3 (formerly JADE) &nbsp;
            +link('https://pugjs.org/api/getting-started.html', 'more info')(class="btn")
        h4 Material Design Lite
          p v0.10.0 &nbsp;
            +link('https://getmdl.io/', 'more info')(class="btn")
    div.column
      h3 Source Code
        ul
          li
            h4 GitHub (public)
            +link('https://github.com/tanseydavid/NodeJS-IoT', 'view repo')(class="btn")
        