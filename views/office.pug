extends layout-admin

block content
  h3= title

  p
    h5=office.phone
    pre.
      #{office.addressLine1} #{office.addressLine2}
      #{office.city}, #{office.state}
      #{office.postalCode}
    pre.
      #{office.country}

  br
  hr
  h4 Employees
  hr
  div
    table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
      thead
        th(align='left') Employee #
        th Name
        th Title
        th Email
        th Extension
      tbody
        each employee, i in office.employees
          tr
            td(align='left')
              a(href=employee.href) #{employee.employeeNumber}
            td.
              #{employee.lastName + ", " + employee.firstName }
            td.
              #{employee.jobTitle}
            td.
              #{employee.email}
            td.
              #{employee.extension}