mixin link(href, name)
    //- attributes == {class: "btn"}
    a(class!=attributes.class href=href)= name

mixin test()
    p Test

mixin productLineCard( productLine )
    div.mdl-cell.mdl-cell--3-col.graybox
        div(class="demo-card-wide-" + productLine.productLineClass + " mdl-card mdl-shadow--6dp")
            div.mdl-card__title
                h2.mdl-card__title-text
                    =productLine.productLine
            div.mdl-card__supporting-text
                p=productLine.textDescription
            div.mdl-card__actions.mdl-card--border
                a(href=productLine.hrefProductLine).mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
                  | See All
                  |
                  =productLine.productLine
            div.mdl-card__menu
                button.mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect
                    i.material-icons
                        share