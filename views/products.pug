extends layout

block content
  h1= title

  div
    table
      thead
        th Product Code
        th(align='center') Name
        th(align='center') Product Line
        th(align='center') Scale
        th(align='center') Vendor
      tbody
        each product, i in products
          tr
            td(align='left')
              a(href=product.href) #{product.productCode}
            td(align='left') #{product.productName}
            td(align='center')
              a(href=product.hrefProductLine) #{product.productLine}
            td(align='center') #{product.productScale}
            td(align='center')
              a(href=product.hrefProductVendor) #{product.productVendor}