extends layout

block content
  - var currencyFormat = new Intl.NumberFormat('en-INR', { style: 'currency', currency: 'USD', minimumFractionDigits: 2});
  - var dateFormat = { year: "numeric", month: "2-digit", day: "2-digit" };
  h1= title

  div
      table
          thead
              th Payment Date
              th Amount
              th
              th(align='center') Customer
              th Check Number
          tbody
              each row, i in rows
                  tr
                      td.
                          #{row.paymentDate.toLocaleDateString("en-US", dateFormat)}
                      td(align='right').
                          #{ currencyFormat.format( row.amount )}
                      td
                        |
                      td.
                          #{row.customerName + " (" + row.customerNumber + ")"}
                      td(align='center')
                          a(href='/payments/' + row.checkNumber + "/" + row.customerNumber) #{row.checkNumber}
